<h2>Create New Project</h2>

<%= form_with(model: @project, url: projects_path) do |form| %>
  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit "Create Project" %>
  </div>
<% end %>
